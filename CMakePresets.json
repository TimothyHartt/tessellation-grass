{
    "version": 3,
    "configurePresets": [
        {
            "name": "win64_debug",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build_win64_debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_LINKER": "lld-link"
            }
        }
    ]
}